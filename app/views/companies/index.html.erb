<section>
<h1>All companies   
<%= link_to 'Add company', new_company_path(@companies) ,{:style=>'color:#4b8812;', :class => "css_class"}%>

<%= link_to "Log Out", destroy_user_session_path, method: :delete %> 
</h1>

<p> Сортировка:
	<%= link_to "Z-A", companies_path(order: "desc") %> |
	<%= link_to "A-Z", companies_path(order: "asc") %>
</p>
<ul>
	<% @companies.each do |i| %>
	<li>
		<%= link_to i.name + " (add vacancy)", i %>
		<%= i.country + ", " %>
		<%= i.city  %>
		<br/>
		<%= link_to 'Add vacancy', i ,{:style=>'color:#4b8812;', :class => "css_class"}%>
	 	<%= link_to 'Edit', edit_company_path(i), {:style=>'color:#d27600;', :class => "css_class"} %>
	  
	  	<%= link_to 'Destroy', i, method: :delete,
	  	data: { confirm: 'Are you sure?' } %>
	</li>
	<br>	
	<% end %>
</ul>
</section>

<%= will_paginate @companies %> 